@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
$rectCount = 5
$animationDuration = 1.2s
$delayRange = 0.4s
$spinkit-spinner-margin = 40px auto
$spinkit-size = 40px
$spinkit-spinner-color = #c00

.sk-wave
  background-color: #fc0
  margin $spinkit-spinner-margin
  width ($spinkit-size * 1.25)
  height $spinkit-size
  text-align center
  font-size 10rpx
  .sk-rect
    background-color $spinkit-spinner-color
    height 100%
    width 6px
    display inline-block
    animation sk-waveStretchDelay $animationDuration infinite ease-in-out
  for $i in 1 .. $rectCount
    .sk-rect{$i}
      animation-delay (-$animationDuration + $delayRange / ($rectCount - 1) * ($i - 1))
@keyframes
  0%, 40%, 100%
    transform scaleY(0.4)
  20%
    transform scaleY(1)
