@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
.search-bar
  height 90rpx
  background $color-theme
  box-sizing border-box
  padding 15rpx
  .input
    width 100%
    height 60rpx
    line-height 60rpx
    background #ad1502
    box-shadow inset 0 0 0 1rpx rgba(0, 0, 0, 0.15)
    margin auto
    text-align center
    border-radius 30rpx
    font-size $font-size-medium
    color rgba(255, 255, 255, 0.45)
    .iconfont
      margin-right 10rpx
      display inline-block
      vertical-align top
