@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
.song-list-wrapper
  padding 0 15px
  .item
    padding 10rpx 0
    display flex
    width 100%
    box-sizing border-box
    justify-content space-between
    align-content center
    &:last-of-type
      &:after
        display none
  .content
    text-overflow ellipsis
    overflow hidden
    flex 1
    .name
      no-wrap()
      padding-right 20rpx
      margin-bottom 10rpx
      font-size $font-size-medium-x
    .sub,.artists
      color $color-text-l
    .artists
      font-size $font-size-small
  .play
    flex 0 0 50px
    height 100%
    font-size 50rpx
    display flex
    align-content center
    padding 15rpx 0
    color $color-text-l
