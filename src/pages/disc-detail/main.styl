@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
.disc-detail
  &.fixed
    position fixed
  .header
    position relative
    display flex
    padding 15rpx 15rpx 20rpx
    overflow hidden
    box-sizing border-box
    width 100%
    color #fff
  .blurry-bg
    position absolute
    background-origin content-box
    width 100%
    height 100%
    left 0
    top 0
    z-index 1
    &:after
      content ' '
      position absolute
      left 0
      top 0
      width 100%
      height 100rpx
      z-index 2
      background-image linear-gradient(180deg, rgba(0, 0, 0, 0.75), transparent)
  .img-wrapper
    position relative
    z-index 9
    box-sizing border-box
    overflow hidden
    border-radius 8rpx
    flex 0 0 220rpx
    height 220rpx
    width 220rpx
    margin-right 15rpx
    &:after, &:before
      content ''
      position absolute
      left 0
      width 100%
      height 40rpx
      z-index 2
    &:before
      top 0
      background-image linear-gradient(180deg, rgba(0, 0, 0, 0.35), transparent)
    &:after
      bottom 0
      background-image linear-gradient(180deg, transparent, rgba(0, 0, 0, 0.15))
    .count, .info
      position absolute
      z-index 3
      color #fff
      font-size 24rpx
      right 10rpx
    .count
      top 4rpx
      padding-left 13rpx
      background-position 0
      background-repeat no-repeat
      background-size 11px 10px
      text-shadow 1px 0 0 rgba(0, 0, 0, 0.15)
      &:before
        content '\e643'
        font-family 'iconfont' !important
        display inline-block
        margin-right 5rpx
    .info
      bottom 0
      right 0
      font-size $font-size-medium
      width 32rpx
      height 32rpx
    .img
      position absolute
      width 100%
      vertical-align middle
      left 0
      top 0
      z-index 1
  .info-wrapper
    position relative
    z-index 9
    flex 1
    font-size $font-size-medium
    display flex
    flex-direction column
    padding-top 30rpx
    .title
      mult-line-ellipsis()
      display block
      font-size $font-size-medium-x
      margin-bottom 30rpx
      line-height 1.4
    .tags
      display block
      margin-bottom 15rpx
    .creator
      font-size 0
      .avatar, .nickname
        display inline-block
        vertical-align top
        font-size $font-size-medium
      .avatar
        width 48rpx
        height 48rpx
        border-radius 50rpx
        margin-right 10rpx
  // 遮罩
  .mask
    fixed-full(9)
    background-color #f4f4f4
    display none
    &.show
      display block
    &:after
      content ''
      position absolute
      left 0
      width 100%
      height 300rpx
      z-index 4
      bottom 0
      background-image linear-gradient(180deg, transparent, rgba(0, 0, 0, 0.15))
    &-close
      position absolute
      z-index 2
      right 30rpx
      top 30rpx
    &-content
      position relative
      z-index 2
      color #fff
    &-img
      width 450rpx
      height 450rpx
      margin 100rpx auto 0
      display block
      box-shadow 0 0 0 2rpx $color-background-d
      border-radius 8rpx
      margin-bottom 30rpx
    &-name
      text-align center
      display block
      padding-bottom 30rpx
      border-bottom 1rpx solid rgba(255, 255, 255, 0.35)
    &-tags, &-desc
      padding 30rpx 60rpx 0
      font-size $font-size-medium
      .item
        display inline-block
        margin-right 10rpx
        padding 0 20rpx
        border-radius 30rpx
        border 1rpx solid rgba(255, 255, 255, 0.35)
    &-desc
      mult-line-ellipsis(10)
  // 播放面板
  .song-bar
    position relative
    z-index 2
    display flex
    justify-content space-between
    align-items center
    width 100%
    box-sizing border-box
    border-top-left-radius 15rpx
    border-top-right-radius 15rpx
    overflow hidden
    background #fff
    margin-top -5rpx
    &::after
      left 15rpx
      right 15rpx
    .play-all
      padding 15rpx 15rpx
      background #fff
      flex 1
      font-size $font-size-medium-x
      &:before
        content '\e60d'
        font-family 'iconfont' !important
        font-size $font-size-large-x
        display inline-block
        vertical-align top
      .total
        color $color-text-l
    .add-subscribed
      position absolute
      padding 15rpx
      height 100%
      box-sizing border-box
      right 0
      text-align center
      background-color $color-theme
      font-size $font-size-medium
      color #fff
