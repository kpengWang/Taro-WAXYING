@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
.slider
  margin-bottom 15rpx
  .image-wrapper
    height 100%
    .img
      width 100%
      height 100%
.title
  position relative
  font-size $font-size-medium-x
  color $color-text
  padding-left 15rpx
  margin-bottom 15rpx
  &:before
    position absolute
    left 0
    top 0
    content ''
    width 4rpx
    height 40rpx
    background-color $color-sub-theme
.recommend-list
  display flex
  width 100%
  flex-wrap wrap
  margin-bottom 30rpx
  .item
    &:not(:nth-of-type(3n))
      padding-right 10rpx
    &:nth-of-type(3n)
      .text
        margin-top -6rpx
    flex 0 0 33.33%
    width 33.33%
    box-sizing border-box
    overflow hidden
    margin-bottom 10rpx
    .img-wrapper
      position relative
      padding-bottom 100%
      height 240rpx
      box-sizing border-box
      overflow hidden
      .count
        position absolute
        right 5rpx
        top 2rpx
        z-index 3
        padding-left 13rpx
        color #fff
        font-size 24rpx
        background-position 0
        background-repeat no-repeat
        background-size 11px 10px
        text-shadow 1px 0 0 rgba(0, 0, 0, 0.15)
      .img
        position absolute
        width 100%
        max-height 240rpx
        left 0
        top 0
        z-index 1
    .text
      mult_line_ellipsis()
      padding 6px 2px 0 6px
      line-height 1.4
      font-size 24rpx
.song-list
  padding 0 15px
  .item
    padding 10rpx 0
    display flex
    width 100%
    box-sizing border-box
    justify-content space-between
    align-content center
    &:last-of-type
      &:after
        display none
  .content
    text-overflow ellipsis
    overflow hidden
    flex 1
    .name
      no-wrap()
      padding-right 20rpx
      margin-bottom 10rpx
      font-size $font-size-medium-x
    .sub
      color $color-text-l
    .artists
      font-size $font-size-small
  .play
    flex 0 0 50px
