@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
.search-bar
  height 90rpx
  background $color-theme
  box-sizing border-box
  padding 15rpx
  .input
    width 100%
    height 60rpx
    line-height 60rpx
    background rgba(255, 255, 255, 0.45)
    margin auto
    text-align center
    border-radius 30rpx
    font-size $font-size-medium
    color $color-text-ll
    .iconfont
      margin-right 10rpx
      display inline-block
      vertical-align top
// 焦点图
.slider
  margin-bottom 15rpx
  .image-wrapper
    height 100%
    .img
      width 100%
      height 100%
.title
  position relative
  font-size $font-size-medium-x
  color $color-text
  padding-left 30rpx
  margin-bottom 15rpx
  &:before
    position absolute
    left 15rpx
    top 0
    content ''
    width 4rpx
    height 40rpx
    background-color $color-sub-theme

.recommend-list
  display flex
  width 100%
  flex-wrap wrap
  margin-bottom 30rpx
  padding-left 15rpx
  box-sizing border-box
  .item
    flex 0 0 33.333333%
    width 33.333333%
    box-sizing border-box
    overflow hidden
    padding-right 15rpx
    margin-bottom 15rpx
    .img-wrapper
      position relative
      padding-bottom 100%
      box-sizing border-box
      overflow hidden
      &:after
        content ' '
        position absolute
        left 0
        top 0
        width 100%
        height 40rpx
        z-index 2
        background-image linear-gradient(180deg, rgba(0, 0, 0, 0.25), transparent)
      .count
        position absolute
        right 10rpx
        top 4rpx
        z-index 3
        padding-left 13rpx
        color #fff
        font-size 24rpx
        background-position 0
        background-repeat no-repeat
        background-size 11px 10px
        text-shadow 1px 0 0 rgba(0, 0, 0, 0.15)
        .iconfont
          font-size $font-size-small
      .img
        position absolute
        width 100%
        max-height 240rpx
        vertical-align middle
        left 0
        top 0
        z-index 1
    .text
      mult_line_ellipsis()
      text-justify justify-content
      padding 4rpx 2rpx 0 6rpx
      line-height 1.2
      font-size $font-size-small
.song-list
  padding 0 15px
  .item
    padding 10rpx 0
    display flex
    width 100%
    box-sizing border-box
    justify-content space-between
    align-content center
    &:last-of-type
      &:after
        display none
  .content
    text-overflow ellipsis
    overflow hidden
    flex 1
    .name
      no-wrap()
      padding-right 20rpx
      margin-bottom 10rpx
      font-size $font-size-medium-x
    .sub
      color $color-text-l
    .artists
      font-size $font-size-small
  .play
    flex 0 0 50px
    height 100%
    font-size 50rpx
    display flex
    align-content center
    padding 15rpx 0
    color $color-text-l
