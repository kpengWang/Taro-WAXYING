@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
// 焦点图
.swiper-wrapper
  position relative
  padding 15rpx 15rpx 0
  &:after
    content ''
    position absolute
    z-index 1
    left 0
    top 0
    width 100%
    height 280rpx
    background linear-gradient(to bottom, $color-theme, transparent)
.swiper
  position relative
  z-index 2
  margin-bottom 15rpx
  box-shadow -4rpx -6rpx 30rpx 0 rgba(0, 0, 0, 0.25)
  border-radius 8rpx
  .image-wrapper
    position relative
    height 100%
    border-radius 8rpx
    // border-bottom-left-radius 8rpx
    // border-bottom-right-radius 8rpx
    overflow hidden
    .type-title
      position absolute
      z-index 1
      font-size $font-size-small
      right 0
      bottom 0
      color #fff
      padding 5rpx 15rpx
      border-top-left-radius 8rpx
    .img
      width 100%
      height 100%
.title
  position relative
  font-size $font-size-medium-x
  color $color-text
  padding-left 30rpx
  margin-bottom 15rpx
  line-height 40rpx
  &:before
    prefix-icon(4rpx, 40rpx, 15rpx)
    background-color $color-sub-theme
