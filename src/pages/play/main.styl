@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
.disc-detail
  .header
    position relative
    display flex
    padding 15rpx
    overflow hidden
    box-sizing border-box
    width 100%
    color #fff
  .blurry-bg
    position absolute
    width 100%
    height 100%
    z-index 1
    &:after
      content ' '
      position absolute
      left 0
      top 0
      width 100%
      height 100rpx
      z-index 2
      background-image linear-gradient(180deg, rgba(0, 0, 0, 0.75), transparent)
  .img-wrapper
    position relative
    z-index 9
    box-sizing border-box
    overflow hidden
    border-radius 8rpx
    flex 0 0 220rpx
    height 220rpx
    width 220rpx
    margin-right 15rpx
    &:after
      content ' '
      position absolute
      left 0
      top 0
      width 100%
      height 40rpx
      z-index 2
      background-image linear-gradient(180deg, rgba(0, 0, 0, 0.25), transparent)
    .count, .info
      position absolute
      z-index 3
      color #fff
      font-size 24rpx
      right 10rpx
    .count
      top 4rpx
      padding-left 13rpx
      background-position 0
      background-repeat no-repeat
      background-size 11px 10px
      text-shadow 1px 0 0 rgba(0, 0, 0, 0.15)
      &:before
        content '\e643'
        font-family 'iconfont' !important
        display inline-block
        margin-right 5rpx
    .info
      bottom 4rpx
    .img
      position absolute
      width 100%
      vertical-align middle
      left 0
      top 0
      z-index 1
  .info-wrapper
    position relative
    z-index 9
    flex 1
    font-size $font-size-medium
    display flex
    flex-direction column
    justify-content space-between
    .title
      mult-line-ellipsis()
      display block
      font-size $font-size-medium-x
      margin-bottom 15rpx
      line-height 1.4
    .tags
      display block
      margin-bottom 15rpx
    .creator
      font-size 0
      .avatar, .nickname
        display inline-block
        vertical-align top
        font-size $font-size-medium
      .avatar
        width 48rpx
        height 48rpx
        border-radius 50rpx
        margin-right 10rpx
