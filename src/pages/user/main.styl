@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
.my-info-wrapper
  position relative
  background $color-theme
  height 120rpx
  overflow visible
  .my-info
    pos-x()
    bottom -30rpx
    box-shadow 0 2rpx 10rpx 0 rgba(36, 36, 36, 0.05)
    background rgba(255, 255, 255, 0.99)
    width 720rpx
    height 150rpx
    padding 33rpx 20rpx
    box-sizing border-box
    border-radius 10rpx
    display flex
    align-content center
    .user-avatar, .user-name, .user-sex
      line-height 84rpx
    .user-avatar
      flex 0 0 84rpx
      border-radius 50%
      box-sizing border-box
      margin-right 30rpx
      overflow hidden
      .img
        max-width 100%
    .user-sex
      flex 0 0 44rpx
      overflow hidden
      .img
        max-width 100%
    .user-name
      flex 1
// 主列表
.main-list
  margin 30rpx 0
  padding 0 15rpx
  .item
    display flex
    flex-wrap nowrap
    width 100%
    align-content center
    overflow hidden
    position relative
    &:after
      pos-y(0, false)
      font-family 'iconfont' !important
      font-size $font-size-large-x
      content '\e617'
      color #ccc
      z-index 3
    .icon
      padding 20rpx 0
      max-width 50rpx
      height 50rpx
      margin-right 20rpx
    .text
      flex 1
      height 60rpx
      line-height 60rpx
      font-size $font-size-medium
      padding 15rpx 0 15rpx 15rpx
// 歌单
.disc-title
  font-size $font-size-small
  background-color #f9f9f9
  padding 10rpx 15rpx
.disc-list
  .item
    font-size 0
    padding 15rpx
    &:last-of-type
      &:after
        display none
    .image-wrapper, .desc-wrapper
      display inline-block
      vertical-align top
    .image-wrapper
      flex 0 0 80rpx
      width 80rpx
      height 80rpx
      overflow hidden
      margin-right 15rpx
      border-radius 8rpx
      .img
        max-width 100%
    .desc-wrapper
      width 625rpx
      height 80rpx
      box-sizing border-box
      padding 5rpx 0
      .text
        font-size $font-size-medium
        line-height 35rpx
        display block
      .count
        color $color-text-l
        font-size $font-size-small
