@import '../../common/stylus/variable'
@import '../../common/stylus/mixin'
.singer
  .update-time
    font-size $font-size-medium
    padding 15rpx 30rpx
    vertical-align top
    &:after
      content '\e605'
      font-family 'iconfont' !important
      color $color-text-l
      margin-left 10rpx
      font-size 30rpx
  &-item
    background #fff
    display flex
    justify-content space-between
    align-items center
    padding 15rpx 0
    height 100rpx
    for $i in 1 .. 4
      &:nth-of-type({$i})
        .ranking
          color $color-theme
  .rank
    flex 0 0 100rpx
    display flex
    flex-direction column
    justify-content space-between
    text-align center
    .ranking
      font-size $font-size-medium-x
    .rise
      color $color-text-l
      font-size $font-size-small
  .avatar
    flex 0 0 120rpx
  .content
    flex 1
    display flex
    flex-direction column
    justify-content space-between
    padding 15rpx 0
    height 100%
    .name
      font-size $font-size-medium-x
    .score
      font-size $font-size-small
      color $color-text-l
